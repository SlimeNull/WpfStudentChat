<Page x:Class="WpfStudentChat.Views.Pages.ContactsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfStudentChat.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:mb="clr-namespace:WpfStudentChat.Behaviors"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContactsPage"
      d:DataContext="{d:DesignInstance Type=local:ContactsPage}">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ResourceKey={x:Type ui:Button}}">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <StackPanel Orientation="Vertical">
                <ui:ListView SelectedIndex="{Binding ViewModel.FriendGroupRequestIndex}">
                    <ListBoxItem Padding="5">
                        <TextBlock Text="好友请求" />
                    </ListBoxItem>
                    <ListBoxItem Padding="5">
                        <TextBlock Text="群请求" />
                    </ListBoxItem>
                </ui:ListView>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ui:Button Content="好友" Grid.Column="0" HorizontalAlignment="Stretch" Margin="2" Command="{Binding ViewModel.SwitchFriendCommand}" />
                    <ui:Button Content="群" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2" Command="{Binding ViewModel.SwitchGroupCommand}"/>
                </Grid>

                <ui:ListView ItemsSource="{Binding ViewModel.Identifiables}" Margin="0 10 0 0" SelectedItem="{Binding ViewModel.SelectedItem}">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <Border>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="Aquamarine" Width="30" Height="30">
                                        <ui:Image>
                                            <b:Interaction.Behaviors>
                                                <mb:ImageLoadBehavior ImageHash="{Binding AvatarHash}"/>
                                            </b:Interaction.Behaviors>
                                        </ui:Image>
                                    </Border>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="5 0 0 0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </StackPanel>
        </Border>

        <GridSplitter Grid.Column="1"/>

        <Border Grid.Column="2">
            <Frame Content="{Binding ViewModel.Content}"/>
        </Border>
    </Grid>
</Page>
