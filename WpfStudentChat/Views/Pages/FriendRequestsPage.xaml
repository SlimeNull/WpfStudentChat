<Page x:Class="WpfStudentChat.Views.Pages.FriendRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfStudentChat.Views.Pages"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:mb="clr-namespace:WpfStudentChat.Behaviors"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FriendRequestsPage"
      d:Background="White"
      d:DataContext="{d:DesignInstance Type=local:FriendRequestsPage,IsDesignTimeCreatable=False}">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadRequestsCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid Margin="48">
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding ViewModel.Requests}">

            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
